<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:scrollbars="none"
    tools:context=".AboutActivity">

    <RelativeLayout
        android:id="@+id/about_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/aboutImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@drawable/about" />

        <TextView
            android:id="@+id/aboutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutImage"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:text="@string/about_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#2F2F2F"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/aboutEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/aboutName"
            android:layout_marginTop="32sp"
            android:autoLink="email"
            android:text="@string/about_email"
            android:textAlignment="center"
            android:textColor="#747474"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/aboutWeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutEmail"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="32dp"
            android:autoLink="web"
            android:text="@string/about_web"
            android:textAlignment="center"
            android:textColor="#747474"
            android:textSize="18sp" />

    </RelativeLayout>
</ScrollView>